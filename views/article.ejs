<!DOCTYPE html>
<html>
    <head>
        <head>
            <title> DevDomain </title>
        <meta description="Tech Blog that delivers technological insights 
        and provides people with the skills needed for their coding journey ">
        <link rel="icon" href="images\Profile Pic.png">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="styles\main.css">
            <!-- <link rel="stylesheet" href="styles\aricle.css"> -->
        </head>
        <body>
            <%- include("navbar.ejs") -%>

            <h1><%- post.title%></h1>
            <p><%- post.content %></p>
            
            <h2> Comments:</h2>
            <div id="comment-box">
                <% comments.forEach(comment => { %>
                    <div class="comment">
                        <p><%= comment.content %></p>
                    </div>
                <% }); %>
            </div>

            <div>

                <form action="/comment" method="POST">
                    <label for="user-comment">Leave a Comment:</label>
                    <input type="text" name="comment" id="user-comment">
                    <input hidden="true" name="post_id" value="<%= post.id%>"> 
                    <input type="submit">
                </form>
            </div>
        </body>
    </head>
</html>